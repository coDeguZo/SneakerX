<h1> Change Profile Information </h1>

<%= render partial: "shared/error_list", locals: {new_object: @customer} %>

<%= form_for @customer do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :address %>
    <%= f.text_field :address  %>
    </div>
    <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <div>
    <%= f.submit %>
    </div>
    
<% end %>

