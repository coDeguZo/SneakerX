<h1 style="text-align: center"> Profile Page </h1>
<br/>
<br/>



<h3> Name: <a class = "name"> <%= @customer.name %> </a></h3>
<h3>Address: <a class = "address"> <%= @customer.address %> </a></h3>

<br/>

<h1 style="text-align: center">Inventory of Shoes</h1>

<ul>
<% @customer.products.each do |product| %>
    <div style= "display: inline-grid">
    <img src= "<%= product.style.img_url %>" style="width: 350px">    
    <li><%= product.style.name %></li>
    <li><%= product.size %></li>
    <li><%= "$#{product.price}" %></li>
    </div>
<% end %>
</ul>


<br/>
<br/>

<div>
<%= link_to "Add Shoes To Sell", new_product_path %>
</div>

<div>
<%= link_to "Change Customer Information", edit_customer_path %>
</div>
