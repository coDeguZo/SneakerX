
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>

<%= stylesheet_link_tag "application" %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SneakerX </title>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

</head>
<%# =============================================================================== %>
<body>

<%# <li id="container"> %>

<div id="container">
            <div id="main">

                <nav>

                  <input type="checkbox" id="check">
                  <label for="check" class="checkbtn">
                  <i class="fas fa-bars"></i>

                  </label> 
                

                  <label class="logo" href="/products">SneakerX ðŸ’¥</label>
                    <ul>
                          <li><a class="fa fa-home" aria-hidden="true" href="/products"> Home</a></li>
                          <% if current_customer == nil %>
                            <% link_to "Profile", login_path %>
                          <% else %>
                            <li class="fas fa-id-card-alt"> <%= link_to "Profile", customer_path(current_customer.id) %> </li>
                          <% end %>
                          <% if current_customer == nil %>
                            <li><a class="fas fa-user-plus" href="/customers/new"> Signup</a></li>
                            <li><a class="fa fa-user" aria-hidden="true" href="/login"> Login</a></li>
                          <% else %>
                            <li class="fa fa-shopping-cart" aria-hidden="true"><%= link_to "Shopping Cart", my_cart_path(current_customer)%></li>
                            <li class="fas fa-sign-out-alt"> <%= link_to "Logout", logout_path %></li>
                          <% end %>
                    </ul>
                </nav>


                

                  <div style="margin: 60px"> 

                  <%= yield %>
                </div>

            </div>
</div>

 </body>
