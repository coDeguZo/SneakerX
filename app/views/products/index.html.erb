
<div class="header">
    <h1 style="text-align: center; font-size: 40px; color: gold;">Shoes For Sale </h1>
</div>

<br/>

<h1> Current Cart: <%= session[:cart] %></h1>

<div>
<ul>
    <% @products.each do |product| %>
    <div style= "display: inline-grid" >
        <img src= "<%= product.style.img_url %>" style="width: 350px">
        <li><%= link_to product.style.name, product_path(product.id)%></li>
    </div>
    <%end%>
</ul>
</div>
