
<h1> <%= @product.style.name %> </h1>

<div class="image">
    <%= image_tag(@product.style.img_url) %>
</div>



<h3> <%= "$#{@product.price}" %></h3>

<br />


<%= form_tag cart_path do %>
    <%= hidden_field_tag :product, @product.id%>
    <%= label_tag :size, "Size #{@product.size}" %>
    <div><%= submit_tag "Add To Cart" %></div>
<% end %>
